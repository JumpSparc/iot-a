<html ng-app="SolarProject">
<% include ./partials/header %>

<body>
	<% include ./partials/navbar %>
	<div class="container">
		<h4>Edit Device</h4>
		<form method="put">
			<div class="form-group">
				<label>Name</label> 
				<input type="text" value="<%= device.name %>" class="form-control">
			</div>
				
			<div class="form-group">
				
			</div>
			<div class="form-group">
				<label>Type</label> 
				<select class="form-control" value="<%= device.type %>">
					<option value=""></option>
					<option value="electricity">Electricity</option>
					<option value="temperature">Temperature</option>
				</select> 
			</div>
				
			<div class="form-group">
				<label>Graph</label> 
				<select class="form-control" value="<%= device.graph %>">
					<option value=""></option>
					<option value="line">Line</option>
					<option value="bar">Bar</option>
				</select> 
			</div>
		</form>
							
	</div>




	<% include ./partials/footer %>	
	
	<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="/javascripts/angularApp.js"></script>
	<script src="/javascripts/devices/device-controller.js"></script>

</body>
</html>